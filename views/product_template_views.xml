<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="prada_product_template_only_form_view_inherit" model="ir.ui.view">
        <field name="name">prada.product.template.product.form.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='general_information']" position="after">
                <page name="pim" string="PIM">
                    <group>
                        <field name="marca_id"/>
                        <field name="default_code" string="Código prada"/>
                        <field name="modelo"/>
                        <field name="departamento_id"/>
                        <field name="seccion_id"/>
                        <field name="silueta_id"/>
                        <field name="horma"/>
                        <field name="material_id"/>
                        <field name="color_id"/>
                        <field name="coleccion_id"/>
                        <field name="atributo1_id"/>
                        <field name="atributo2_id"/>
                        <field name="ocasion_id"/>
                        <field name="no_juego"/>
                        <field name="juego1"/>
                        <field name="juego2"/>
                        <field name="juego3"/>
                        <field name="categoria_id"/>
                        <field name="tendencia_id"/>
                        <field name="tienda_id"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
    
    <record id="product_product_only_form_view_inherit_pradar" model="ir.ui.view">
        <field name="name">product.product.product.form.prada</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='general_information']" position="after">
                <page name="pim" string="PIM">
                    <group>
                        <field name="marca_id"/>
                        <field name="default_code" string="Código prada"/>
                        <field name="modelo"/>
                        <field name="departamento_id"/>
                        <field name="seccion_id"/>
                        <field name="silueta_id"/>
                        <field name="horma"/>
                        <field name="material_id"/>
                        <field name="color_id"/>
                        <field name="coleccion_id"/>
                        <field name="atributo1_id"/>
                        <field name="atributo2_id"/>
                        <field name="ocasion_id"/>
                        <field name="no_juego"/>
                        <field name="juego1"/>
                        <field name="juego2"/>
                        <field name="juego3"/>
                        <field name="categoria_id"/>
                        <field name="tendencia_id"/>
                        <field name="tienda_id"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

</odoo>