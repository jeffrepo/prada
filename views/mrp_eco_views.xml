<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <record id="prada_mrp_eco_view_form" model="ir.ui.view">
        <field name="name">prada.mrp.eco.view.form</field>
        <field name="model">mrp.eco</field>
        <field name="inherit_id" ref="mrp_plm.mrp_eco_view_form"/>
        <field name="arch" type="xml">
            <field name="product_tmpl_id" position="after">
                <field name="total_modelos"/>
                <field name="total_costo_promedio"/>
                <field name="total_corrida_promedio"/>
                <field name="suma_unidades"/>
            </field>
            <page name="extra_info" position="after">
                <page name="pim" string="PIM">
                    <field name="line_ids">
                        <list>
                            <field name="eco_id" invisible="1" optional="hide"/>
                            <field name="producto_id" required="true"/>
                            <field name="prada_image" widget="image">
                                <attribute name="readonly" groups="prada.prada_compras_marketing">0</attribute>
                            </field>
                            <field name="temp" optional="show"/>
                            <field name="proveedor_id" optional="show"/>
                            <field name="marca_id" optional="show"/>
                            <field name="codigo_prada" optional="show"/>
                            <field name="modelo" optional="show"/>
                            <field name="departamento_id" optional="show"/>
                            <field name="seccion_id" optional="show"/>
                            <field name="silueta_id" optional="show"/>
                            
                            <field name="horma" optional="show"/>
                            <field name="material_id" optional="show"/>
                            <field name="color_id" optional="show"/>
                            <field name="atributo1_id" optional="show"/>
                            <field name="atributo2_id" optional="show"/>
                            <field name="ocasion_id" optional="show"/>
                            <field name="no_juego" optional="show"/>
                            <field name="juego1">
                                <attribute name="readonly" groups="prada.prada_compras_producto">0</attribute>
                            </field>
                            <field name="juego2" optional="show"/>
                            <field name="juego3" optional="show"/>
                            <field name="categoria_id" optional="show"/>
                            <field name="tendencia_id" optional="show"/>
                            <field name="coleccion_id" optional="show"/>
                            <field name="tienda_id" optional="show"/>
                            <field name="costo" groups="prada.prada_dg,prada.prada_gestoria,prada.prada_compras,prada.prada_compras_importaciones,prada.prada_compras_planeacion" force_save="1"/>
                            <field name="corridas_prepedido" optional="show"/>
                            <field name="corrida"/>
                            <field name="talla"/>
                            <field name="columna1" optional="show"/>
                            <field name="columna2" optional="show"/>
                            <field name="columna3" optional="show"/>
                            <field name="columna4" optional="show"/>
                            <field name="columna5" optional="show"/>
                            <field name="columna6" optional="show"/>
                            <field name="columna7" optional="show"/>
                            <field name="columna8" optional="show"/>
                            <field name="columna9" optional="show"/>
                            <field name="columna10" optional="show"/>
                            <field name="columna11" optional="show"/>
                            <field name="totalu" optional="show"/>
                            <field name="total_eur" optional="show"/>
                            <field name="gastos" optional="show"/>
                            <field name="iva" optional="show"/>
                            <field name="total_usd" optional="show"/>
                            <field name="pvp_calculado" optional="show"/>
                            <field name="pvp_redondeado" optional="show"/>
                            <field name="pvp_comercial" optional="show"/>
                            <field name="pvp_outlet" optional="show"/>
                            <field name="comentarios_compras" optional="show"/>
                            <field name="mes_entrega" optional="show"/>
                            <field name="mes_recibo_tienda" optional="show"/>
                            <field name="apuntes_getoria_compra_es" optional="show"/>
                            <field name="revision_es_antes_vuelo" optional="show"/>
                            <field name="troquel_id" optional="show"/>
                            <field name="medidas" optional="show"/>
                            <field name="tipo_punta" optional="show"/>
                            <field name="tipo_fijacion" optional="show"/>
                            <field name="comentarios_producto_compra_es" optional="show"/>
                            <field name="comentarios_p1_revision_mx" optional="show"/>
                            <field name="comentarios_p2_revision_mx" optional="show"/>
                            <field name="comentarios_producto_llegada_mx" optional="show"/>
                            <field name="cuidados_producto" optional="show"/>
                            <field name="atributo_especial" optional="show"/>
                            <field name="estatus_muestra_web_id" optional="show"/>
                            <field name="estatus_muestra_marketing_id" optional="show"/>
                            <field name="fecha_vuelo_muestras" optional="show"/>
                            <field name="estatus_muestra_importaciones" optional="show"/>
                            <field name="fecha_vuelo_produccion" optional="show"/>
                            <field name="estatus_produccion_importacion" optional="show"/>
                            <field name="bullets" />
                            <field name="titulo" optional="show"/>
                            <field name="descripcion" optional="show"/>
                            <field name="metatitulo"  optional="show"/>
                            <field name="metadescripcion" optional="show"/>
                            <field name="titulo_amazon"  optional="show"/>
                            <field name="desripcion_amazon"  optional="show"/>
                            <field name="bullets_amazon"  optional="show"/>
                        </list>
                    </field>
                </page>
                <page name="pim_info" string="PIM INFORMACIÃ“N ADICIONAL" groups="mrp_plm.group_plm_manager">
                    <group>
                        <field name="fecha"/>
                        <field name="tipo_cambio"/>
                        <field name="gastos"/>
                        <field name="iva"/>
                        <field name="marcaje"/>
                    </group>
                </page>
            </page>
        </field>
    </record>

